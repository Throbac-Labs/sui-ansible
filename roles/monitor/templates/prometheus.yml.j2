global:
  scrape_interval: 30s
  scrape_timeout: 10s

rule_files:
  - alert.yml

scrape_configs:
  - job_name: local_prometheus
    metrics_path: /metrics
    static_configs:
      - targets:
          - 'localhost:9090'
  - job_name: node-exporter
    static_configs:
      - targets:
          - 'node-exporter:9100'         
  - job_name: sui
    metrics_path: /metrics
    static_configs:
      - targets:
          - 'localhost:9184'

remote_write: 
- url: {{ grafana_cloud_prometheus_url }}
  basic_auth: 
    username: {{ grafana_cloud_prometheus_username }}
    password: {{ grafana_cloud_prometheus_password }}
  name: drop_expensive
